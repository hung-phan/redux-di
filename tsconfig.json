{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "React",
    "typeRoots" : [
      "node_modules/@types",
      "src/@types"
    ],
    "lib": ["es2016", "dom"],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ]
}